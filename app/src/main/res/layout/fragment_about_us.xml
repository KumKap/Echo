<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/joeyPicture"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/joey"/>
    <TextView
        android:id="@+id/devInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent = "true"
        android:layout_gravity="center"
        android:layout_centerVertical = "true"
        android:text="This app is made by Kumel Kapadia as"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/devInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_centerInParent = "true"
        android:layout_gravity="center"
        android:layout_centerVertical = "true"
        android:text="part of InternShala's Online Android"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/devInfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_centerInParent = "true"
        android:layout_gravity="center"
        android:layout_centerVertical = "true"
        android:text="Training Project."
        android:textColor="#000000"

        />
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_centerInParent = "true"
        android:layout_gravity="center"
        android:layout_centerVertical = "true"
        android:text="App version: 1.0"
        android:textColor="#000000"
        />

</LinearLayout>
